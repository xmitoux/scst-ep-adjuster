{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },

  "plugins": ["@typescript-eslint", "react", "react-hooks"],

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],

  "parser": "@typescript-eslint/parser",

  "parserOptions": {
    "sourceType": "module",

    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "globals": {
      "React": "writable"
    },

    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
